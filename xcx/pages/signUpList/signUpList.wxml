			<view slot="title">
				报名
			</view>
		</i-step>
		<i-step icon="right">
			<view slot="title">
				录取
			</view>
		</i-step>
		<i-step icon="redpacket">
			<view slot="title">
				已支付
			</view>
		</i-step>
	</i-steps>
	<view class="descHandle">
