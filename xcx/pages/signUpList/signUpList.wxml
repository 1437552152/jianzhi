					<view class="time">2020-08-23 12:23:23</view>
				</view>
			</i-step>
			<i-step>
				<view slot="content">
					<view class="status">被审核</view>
					<view class="time">2020-08-23 12:23:23</view>
				</view>
			</i-step>
			<i-step>
				<view slot="content">
					<view class="status">已支付</view>
					<view class="time">2020-08-23 12:23:23</view>
				</view>
			</i-step>
		</i-steps>

	</view>
	<view class="line"></view>
	<view class="recordPwd">
		<view class="title">兼职信息</view>
    <view class="infoJian">
       <view class="left">
         <view class="ArtTitle">你有哪些坚持很久的事</view>
         <view class="union">0.0元/次</view>
         <view class="noAddress">不限工作地点</view>
       </view>
       <view class="right"><image src="../../static/img/right.png"></image></view>
